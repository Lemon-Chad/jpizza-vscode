{
    "comments": {
        "lineComment": "<>",
        "blockComment": [ "<<", "<<" ]
    },

    "brackets": [
        ["{", "}"],
        ["[", "]"]
    ],

    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["\"", "\""],
        ["'", "'"],
        ["(", ")"],
        ["<", ">"]
    ],

    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["\"", "\""],
        ["'", "'"],
        ["(", ")"],
        ["<", ">"]
    ],

    "indentationRules": {
        "increaseIndentPattern": "(\\[|\\{|\\()\n",
        "decreaseIndentPattern": "(?<=\n(\\]|\\}|\\)))"
    }
}